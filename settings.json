{
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "gopls"
    },
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true,
        "diagnostics": true,
        "goToDefinition": true,
        "hover": true,
        "signatureHelp": true,
        "goToTypeDefinition": true,
    },
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "css.lint.argumentsInColorFunction": "ignore",
    "editor.autoClosingBrackets": "never",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'monospace', 'fira code', monospace, 'Droid Sans Fallback'",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": false,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 0,
    "editor.renderIndentGuides": false,
    "editor.scrollBeyondLastLine": false,
    "editor.suggest.localityBonus": true,
    "editor.wordBasedSuggestions": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "git.autofetchPeriod": 600,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "go.buildOnSave": "off",
    "go.coverOnTestPackage": false,
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "search.quickOpen.includeSymbols": true,
    "terminal.integrated.fontWeightBold": "700",
    "terminal.integrated.lineHeight": 1.1,
    "update.enableWindowsBackgroundUpdates": false,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.insert": "#005f5f",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vs-minimal",
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tips.enabled": false,
    //"workbench.colorCustomizations": {
    //    "statusBar.background": "#005f5f",
    //    "statusBar.noFolderBackground": "#005f5f",
    //    "statusBar.debuggingBackground": "#005f5f"
    //},
    "zenMode.hideStatusBar": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "editor.acceptSuggestionOnCommitCharacter": false,
    "workbench.activityBar.visible": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.revealIfOpen": true,
    "debug.console.fontSize": 14.1,
    "go.formatTool": "gofmt",
    "editor.fontSize": 13.5,
    "editor.highlightActiveIndentGuide": false,
    "editor.lightbulb.enabled": false,
    "workbench.colorTheme": "Monokai Dimmed",
}