{
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "bingo"
    },
    "go.languageServerFlags": [
        "-enhance-signature-help",
        "-trace",
        "-format-style=goimports",
    ],
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true
    },
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "'noto', 'monospace', 'fira code', monospace, 'Droid Sans Fallback'",
    "editor.insertSpaces": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.lineNumbers": "off",
    "editor.renderIndentGuides": false,
    "editor.minimap.enabled": false,
    "css.lint.argumentsInColorFunction": "ignore",
    "go.lintOnSave": "off",
    "editor.fontLigatures": true,
    "workbench.activityBar.visible": false,
    "window.menuBarVisibility": "toggle",
    "files.autoSaveDelay": 250,
    "workbench.statusBar.feedback.visible": false,
    "zenMode.hideStatusBar": false,
    "workbench.statusBar.visible": true,
    "go.autocompleteUnimportedPackages": true,
    "go.coverOnTestPackage": false,
    "go.formatTool": "goimports",
    "workbench.colorTheme": "Visual Studio Light",
    "vim.statusBarColorControl": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "vim.statusBarColors.insert": "#005f5f",
    "editor.fontSize": 12,
    "git.confirmSync": false
}