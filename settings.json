{
	"go.useLanguageServer": true,
	"[go]": {
		"editor.snippetSuggestions": "none",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"gopls": {
		"usePlaceholders": false, // add parameter placeholders when completing a function
		"completionDocumentation": false // for documentation in completion items
	},
	"files.eol": "\n", // formatting only supports LF line endings
	"css.lint.argumentsInColorFunction": "ignore",
	"editor.autoClosingBrackets": "never",
	"editor.copyWithSyntaxHighlighting": false,
	"editor.dragAndDrop": false,
	"editor.fontFamily": "'Cascadia Code', 'inconsolata', 'monospace', 'noto mono', 'terminus', 'Droid Sans Fallback'",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.quickSuggestionsDelay": 0,
	"editor.renderIndentGuides": false,
	"editor.scrollBeyondLastLine": false,
	"editor.suggest.localityBonus": true,
	"editor.wordBasedSuggestions": false,
	"files.autoSave": "onFocusChange",
	"files.autoSaveDelay": 500,
	"git.autofetchPeriod": 600,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.fetchOnPull": true,
	"go.buildOnSave": "off",
	"go.coverOnTestPackage": false,
	"go.lintOnSave": "off",
	"go.vetOnSave": "off",
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": false
	},
	"search.quickOpen.includeSymbols": true,
	"terminal.integrated.fontWeightBold": "700",
	"terminal.integrated.lineHeight": 1.15,
	"terminal.integrated.copyOnSelection": true,
	"update.enableWindowsBackgroundUpdates": false,
	"vim.statusBarColorControl": true,
	//"vim.statusBarColors.insert": "#005f5f",
	"window.menuBarVisibility": "toggle",
	"window.zoomLevel": 0,
	"workbench.enableExperiments": false,
	"workbench.startupEditor": "none",
	"workbench.statusBar.feedback.visible": false,
	"workbench.tips.enabled": false,
	"zenMode.hideStatusBar": false,
	"editor.acceptSuggestionOnCommitCharacter": false,
	"workbench.activityBar.visible": true,
	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.revealIfOpen": true,
	"debug.console.fontSize": 14.1,
	"go.formatTool": "gofmt",
	"editor.highlightActiveIndentGuide": false,
	"editor.lightbulb.enabled": false,
	"editor.selectionHighlight": false,
	"terminal.integrated.fontSize": 13.9,
	"cSpell.diagnosticLevel": "Hint",
	"editor.detectIndentation": false,
	"terminal.integrated.fontFamily": "'monospace'",
	"spellright.notificationClass": "warning",
	"spellright.spellContext": "comments",
	"scm.diffDecorations": "none",
	"markdown.preview.fontSize": 18,
	"markdown.styles": [
		"http://barnex.github.io/assets/css/style.css"
	],
	"editor.tokenColorCustomizations": {
		"[Visual Studio Light]": {
			"comments": "#9fa4bd"
		},
		"[Solarized Dark]": {
			"textMateRules": [
				{
					"name": "comments",
					"scope": [
						"comment",
						"comment.block",
						"comment.block.documentation",
						"comment.line",
					],
					"settings": {
						"foreground": "#646464",
						"fontStyle": ""
					}
				},
				{
					"name": "constants",
					"scope": [
						"constant",
						"constant.numeric",
						"constant.other",
						"constant.language",
					],
					"settings": {
						"foreground": "#FFFFCC",
						"fontStyle": ""
					}
				},
				{
					"name": "entities",
					"scope": [
						"entity",
					],
					"settings": {
						"foreground": "#FF0000",
						//"fontStyle": "bold"
					}
				},
				{
					"name": "meta",
					"scope": [
						"meta", // json
						"meta.block",
						"meta.cast",
						"meta.class",
						"meta.function",
					],
					"settings": {
						"foreground": "#ffdddd",
						"fontStyle": ""
					}
				},
				{
					"name": "keywords",
					"scope": [
						"keyword",
					],
					"settings": {
						"foreground": "#CCCCFF",
						//"fontStyle": "bold"
					}
				},
				{
					"name": "support",
					"scope": [
						"variable",
						"variable.language",
						"variable.name",
						"variable.other",
					],
					"settings": {
						"foreground": "#ffdddd",
						"fontStyle": ""
					}
				},
				{
					"name": "??",
					"scope": [
						""
					],
					"settings": {
						"foreground": "#ffdddd",
						"fontStyle": ""
					}
				},
			]
		},
	},
	"vim.useSystemClipboard": true,
	"breadcrumbs.enabled": false,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/target/**": true
	},
	"workbench.colorCustomizations": {
		"[Solarized Dark]": {
			"terminal.background": "#000000"
		},
		"statusBar.background": "#005f5f",
		"statusBar.noFolderBackground": "#005f5f",
		"statusBar.debuggingBackground": "#005f5f"
	},
	"workbench.colorTheme": "Solarized Dark",
	"editor.snippetSuggestions": "none",
	"editor.suggest.showSnippets": false,
	"editor.suggest.snippetsPreventQuickSuggestions": false
}